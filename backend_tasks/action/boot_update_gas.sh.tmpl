#!/bin/sh

pid=`ps -ef | grep "update_gas.py" | grep -v grep | /usr/bin/awk '{print $2}'`

cd "[CUR_PATH]"

# echo ${pid}
date >> boot_update_gas.log

if [ ! ${pid} ]; then
        # echo "is null"
        echo "No backend process rubbish to clean." >> boot_update_gas.log
else
        # echo "not null"
        kill -s 9 ${pid}
        echo "Warning: clean backend process of last round." >> boot_update_gas.log
fi
. ../venv/bin/activate
python update_gas.py >> boot_update_gas.log
echo 'OK'